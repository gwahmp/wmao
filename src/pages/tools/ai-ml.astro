---
import ToolsLayout from "../../layouts/ToolsLayout.astro";

import generative from "../../data/tools/ai-ml/generative.json";
import chatbots from "../../data/tools/ai-ml/chatbots.json";
import imageVideo from "../../data/tools/ai-ml/image-video.json";
import writing from "../../data/tools/ai-ml/writing.json";
import platforms from "../../data/tools/ai-ml/platforms.json";

const sections = [
  { id: "generative", title: "Generative AI", data: generative },
  { id: "chatbots", title: "Chatbots & Assistants", data: chatbots },
  { id: "image-video", title: "Image & Video AI", data: imageVideo },
  { id: "writing", title: "AI Writing Tools", data: writing },
  { id: "platforms", title: "AI Development Platforms", data: platforms }
];

const categories = [
  { name: "Cloud & Data", slug: "cloud-data" },
  { name: "AI & ML", slug: "ai-ml" },
  { name: "Marketing", slug: "marketing" },
  { name: "SEO", slug: "seo" },
  { name: "Analytics", slug: "analytics" },
  // continue later
];

const breadcrumbs = `
<nav class="breadcrumbs border-b border-gray-400 pb-4 mb-5" itemscope itemtype="https://schema.org/BreadcrumbList">

  <span itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
    <a href="https://www.wikimint.com" itemprop="item">
      <span itemprop="name" class="text-wmblue">Home</span>
    </a>
    <meta itemprop="position" content="1" />
  </span>

  <span> » </span>

  <span itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
    <a href="https://www.wikimint.com/tools" itemprop="item">
      <span itemprop="name" class="text-wmblue">Tools</span>
    </a>
    <meta itemprop="position" content="2" />
  </span>

  <span> » </span>

  <span itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
    <a href="https://www.wikimint.com/tools/ai-ml" itemprop="item">
      <span itemprop="name" class="text-wmblue">AI & Machine Learning</span>
    </a>
    <meta itemprop="position" content="3" />
  </span>

</nav>
`;
---

<ToolsLayout
  title="AI & Machine Learning Tools"
  description="Explore free and open-source AI tools for writing, chatbots, images, automation and business intelligence."
  breadcrumbs={breadcrumbs}
  categories={categories}
>

  {sections.map(sec => (
    <section id={sec.id} class="mb-10">
      <h2 class="text-2xl font-semibold mb-4">
        {sec.title} ({sec.data.length})
      </h2>

      <ul class="space-y-2 list-disc pl-5">
        {sec.data.map(tool => (
          <li>
            <a href={tool.url} target="_blank" rel="nofollow noopener">
              {tool.name}
            </a>
            {" - "}{tool.description}
          </li>
        ))}
      </ul>
    </section>
  ))}

</ToolsLayout>
