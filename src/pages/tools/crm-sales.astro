---
import ToolsLayout from "../../layouts/ToolsLayout.astro";

import crm from "../../data/tools/crm-sales/crm.json";
import leads from "../../data/tools/crm-sales/lead-generation.json";
import sales from "../../data/tools/crm-sales/sales-automation.json";

const sections = [
  { id: "crm", title: "CRM Platforms", data: crm },
  { id: "lead-generation", title: "Lead Generation Tools", data: leads },
  { id: "sales-automation", title: "Sales Automation Tools", data: sales }
];

const breadcrumbs = `
<nav class="breadcrumbs border-b border-gray-400 pb-4 mb-5" itemscope itemtype="https://schema.org/BreadcrumbList">
  <span itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
    <a href="https://www.wikimint.com" itemprop="item">
      <span itemprop="name" class="text-wmblue">Home</span>
    </a>
    <meta itemprop="position" content="1" />
  </span>
  <span> » </span>
  <span itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
    <a href="https://www.wikimint.com/tools" itemprop="item">
      <span itemprop="name" class="text-wmblue">Tools</span>
    </a>
    <meta itemprop="position" content="2" />
  </span>
  <span> » </span>
  <span itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
    <a href="https://www.wikimint.com/tools/crm-sales" itemprop="item">
      <span itemprop="name" class="text-wmblue">CRM & Sales</span>
    </a>
    <meta itemprop="position" content="3" />
  </span>
</nav>
`;
---

<ToolsLayout
  title="CRM & Sales Automation Tools"
  description="Free CRM, sales automation, lead tracking, and customer management tools to grow your business faster."
  breadcrumbs={breadcrumbs}
>
  {sections.map(sec => (
    <section id={sec.id} class="mb-10">
      <h2 class="text-2xl font-semibold mb-4">
        {sec.title} ({sec.data.length})
      </h2>
      <ul class="space-y-2 list-disc pl-5">
        {sec.data.map(tool => (
          <li>
            <a href={tool.url} target="_blank" class="text-wmblue hover:underline">
              {tool.name}
            </a>
            {" - "}{tool.description}
          </li>
        ))}
      </ul>
    </section>
  ))}
</ToolsLayout>
