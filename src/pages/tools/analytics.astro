---
import ToolsLayout from "../../layouts/ToolsLayout.astro";

import web from "../../data/tools/analytics/web-analytics.json";
import heatmaps from "../../data/tools/analytics/heatmaps.json";
import events from "../../data/tools/analytics/event-tracking.json";
import tags from "../../data/tools/analytics/tag-management.json";
import perf from "../../data/tools/analytics/performance.json";

const sections = [
  { id: "web-analytics", title: "Web Analytics", data: web },
  { id: "heatmaps", title: "Heatmaps & Session Recording", data: heatmaps },
  { id: "event-tracking", title: "Event Tracking", data: events },
  { id: "tag-management", title: "Tag Management", data: tags },
  { id: "performance", title: "Performance & Speed", data: perf }
];

const categories = [
  { name: "Cloud & Data", slug: "cloud-data" },
  { name: "AI & ML", slug: "ai-ml" },
  { name: "Marketing", slug: "marketing" },
  { name: "SEO", slug: "seo" },
  { name: "Analytics", slug: "analytics" }
];

const breadcrumbs = `
<nav class="breadcrumbs border-b border-gray-400 pb-4 mb-5" itemscope itemtype="https://schema.org/BreadcrumbList">
  <span itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
    <a href="https://www.wikimint.com" itemprop="item">
      <span itemprop="name" class="text-wmblue">Home</span>
    </a>
    <meta itemprop="position" content="1" />
  </span>
  <span> » </span>
  <span itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
    <a href="https://www.wikimint.com/tools" itemprop="item">
      <span itemprop="name" class="text-wmblue">Tools</span>
    </a>
    <meta itemprop="position" content="2" />
  </span>
  <span> » </span>
  <span itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
    <a href="https://www.wikimint.com/tools/analytics" itemprop="item">
      <span itemprop="name" class="text-wmblue">Analytics</span>
    </a>
    <meta itemprop="position" content="3" />
  </span>
</nav>
`;
---

<ToolsLayout
  title="Analytics & Tracking Tools"
  description="Free analytics tools for tracking website traffic, user behavior, events, and performance."
  breadcrumbs={breadcrumbs}
  categories={categories}
>
  {sections.map(sec => (
    <section id={sec.id} class="mb-10">
      <h2 class="text-2xl font-semibold mb-4">
        {sec.title} ({sec.data.length})
      </h2>

      <ul class="space-y-2 list-disc pl-5">
        {sec.data.map(tool => (
          <li>
            <a href={tool.url} target="_blank" class="text-wmblue hover:underline" rel="nofollow noopener">
              {tool.name}
            </a>
            {" - "}{tool.description}
          </li>
        ))}
      </ul>
    </section>
  ))}
</ToolsLayout>
