---
import ToolsLayout from "../../layouts/ToolsLayout.astro";

import recruitment from "../../data/tools/hr-ops/recruitment.json";
import payroll from "../../data/tools/hr-ops/payroll.json";
import performance from "../../data/tools/hr-ops/performance.json";

const sections = [
  { id: "recruitment", title: "Recruitment Tools", data: recruitment },
  { id: "payroll", title: "Payroll Tools", data: payroll },
  { id: "performance", title: "Performance Tools", data: performance }
];

const breadcrumbs = `
<nav class="breadcrumbs border-b border-gray-400 pb-4 mb-5" itemscope itemtype="https://schema.org/BreadcrumbList">
  <span itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
    <a href="https://www.wikimint.com" itemprop="item"><span itemprop="name" class="text-wmblue">Home</span></a>
    <meta itemprop="position" content="1" />
  </span> » 
  <span itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
    <a href="https://www.wikimint.com/tools" itemprop="item"><span itemprop="name" class="text-wmblue">Tools</span></a>
    <meta itemprop="position" content="2" />
  </span> » 
  <span itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
    <a href="https://www.wikimint.com/tools/hr-ops" itemprop="item"><span itemprop="name" class="text-wmblue">HR & Hiring</span></a>
    <meta itemprop="position" content="3" />
  </span>
</nav>
`;
---

<ToolsLayout
  title="HR & Hiring Tools"
  description="Free recruitment, payroll, and performance management tools for businesses."
  breadcrumbs={breadcrumbs}
>
  {sections.map(sec => (
    <section id={sec.id} class="mb-10">
      <h2 class="text-2xl font-semibold mb-4">{sec.title} ({sec.data.length})</h2>
      <ul class="space-y-2 list-disc pl-5">
        {sec.data.map(tool => (
          <li>
            <a href={tool.url} target="_blank" class="text-wmblue hover:underline">{tool.name}</a>
            {" - "}{tool.description}
          </li>
        ))}
      </ul>
    </section>
  ))}
</ToolsLayout>
