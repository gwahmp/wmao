---
import ToolsLayout from "../../layouts/ToolsLayout.astro";

import graphics from "../../data/tools/design-ui/graphic-design.json";
import uiux from "../../data/tools/design-ui/ui-ux.json";
import media from "../../data/tools/design-ui/video-audio.json";

const sections = [
  { id: "graphic-design", title: "Graphic Design Tools", data: graphics },
  { id: "ui-ux", title: "UI & UX Design Tools", data: uiux },
  { id: "video-audio", title: "Video & Audio Tools", data: media }
];

const breadcrumbs = `
<nav class="breadcrumbs border-b border-gray-400 pb-4 mb-5" itemscope itemtype="https://schema.org/BreadcrumbList">
  <span itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
    <a href="https://www.wikimint.com" itemprop="item">
      <span itemprop="name" class="text-wmblue">Home</span>
    </a>
    <meta itemprop="position" content="1" />
  </span>
  <span> » </span>
  <span itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
    <a href="https://www.wikimint.com/tools" itemprop="item">
      <span itemprop="name" class="text-wmblue">Tools</span>
    </a>
    <meta itemprop="position" content="2" />
  </span>
  <span> » </span>
  <span itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
    <a href="https://www.wikimint.com/tools/design-ui" itemprop="item">
      <span itemprop="name" class="text-wmblue">Design & Creative</span>
    </a>
    <meta itemprop="position" content="3" />
  </span>
</nav>
`;
---

<ToolsLayout
  title="Design & Creative Tools for Graphics, UI & Branding"
  description="Free design, graphic, UI/UX, and creative tools for logos, social media, websites, and marketing assets."
  breadcrumbs={breadcrumbs}
>
  {sections.map(sec => (
    <section id={sec.id} class="mb-10">
      <h2 class="text-2xl font-semibold mb-4">
        {sec.title} ({sec.data.length})
      </h2>
      <ul class="space-y-2 list-disc pl-5">
        {sec.data.map(tool => (
          <li>
            <a href={tool.url} target="_blank" class="text-wmblue hover:underline">
              {tool.name}
            </a>
            {" - "}{tool.description}
          </li>
        ))}
      </ul>
    </section>
  ))}
</ToolsLayout>
