---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Page Not Found - Wikimint">
  <section class="max-w-3xl mx-auto text-center py-20">
    <h1 class="text-4xl font-bold mb-6">404 - Page Not Found</h1>
    <p class="text-lg text-gray-600 mb-8">
      Sorry, the page you are looking for does not exist.
    </p>
    <a href="/" class="px-6 py-3 rounded-lg bg-blue-600 text-white hover:bg-blue-700">
      Go Back Home
    </a>
  </section>
</BaseLayout>
