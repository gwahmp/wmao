    #sidebar-wrapper{display:none ! important}#main-wrapper{width:100%! important}
        
        
        .filter-bar {
          display: flex;
          flex-wrap: wrap;
          gap: 10px;
          margin-bottom: 20px;
        }
    
        #search, #categoryFilter {
          padding: 10px;
          font-size: 16px;
          border: 1px solid #ccc;
          border-radius: 4px;
        }
    
        #search {
          flex: 1;
