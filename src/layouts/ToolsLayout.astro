---
import BaseLayout from "./BaseLayout.astro";

type Category = {
  name: string;
  slug: string;
};

interface Props {
  title: string;
  description: string;
  breadcrumbs: any;
  categories: Category[];
}
import { TOOL_CATEGORIES } from "../data/tools/categories";
const { title, description, breadcrumbs } = Astro.props as Props;
---

<BaseLayout title={title} description={description}>
  <main class="max-w-7xl mx-auto px-4 py-8 grid grid-cols-1 lg:grid-cols-[3fr_1fr] gap-20">

    <!-- MAIN -->
    <article>
        <div set:html={breadcrumbs}></div>

      <h1 class="text-3xl font-bold mb-3">{title}</h1>
      <p class="text-gray-600 mb-8">{description}</p>

      <slot />
    </article>

    <!-- SIDEBAR -->
    <aside class="border-l pl-6">
      <h3 class="font-semibold mb-4">All Categories</h3>
      <nav>
        <ul>
          {TOOL_CATEGORIES.map(cat => (
            <li>
              <a href={`/tools/${cat.slug}`}>
                {cat.name}
              </a>
            </li>
          ))}
        </ul>
      </nav>
      
    </aside>

  </main>
</BaseLayout>
